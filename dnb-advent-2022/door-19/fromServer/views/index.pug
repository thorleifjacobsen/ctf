doctype html 
html 
    head 
        title North Pole's Most Wanted 
        link(rel='stylesheet', integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC", crossorigin="anonymous", type='text/css', href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css')
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js", integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM", crossorigin="anonymous")
        style(type="text/css").
            .gal{
                padding: 5px;
                width: 200px;
                font-size: .9em;
                text-align: center;
                float: left;
            }
            .gal h1{
                font-size: 1em;
            }
            .container{
                margin: 0 auto;
                display: block;
                border: 1px solid #eee;
                overflow: auto;
                width: 1100px;
                
            }
            .footer{
                display: block;
                clear: both;
                text-align: center;
            }
            h1{
                text-align: center;
            }
    body 
        h1 The North Pole's most Wanted
        div(class="container")
            each sus in suspects 
                div(class="gal")
                    img(src=`/img/${sus.portrait}` width="128")
                    h1=sus.name 
                    p=sus.description
        div(class="footer")
            span=`logged in as ${username}`